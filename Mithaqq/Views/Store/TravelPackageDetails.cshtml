@model TravelPackage
@{
    ViewData["Title"] = Model.Name;
}

<section class="py-5" style="padding-top: 120px !important; background-color: #f8f9fa;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="bg-white p-3 rounded shadow-sm">
                    <img src="@(Model.ImageUrl ?? "/images/default-placeholder.png")" class="w-100 rounded" alt="@Model.Name" style="max-height: 500px; object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="ps-lg-4">
                    <span class="badge bg-info">Travel Package</span>
                    <h1 class="display-5 fw-bold mt-2">@Model.Name</h1>
                    <p class="lead text-muted">@Model.Destination</p>
                    <div class="my-4">
                        <span class="h2 text-success fw-bold">@Model.Price.ToString("C")</span>
                        <span class="text-muted"> per person</span>
                    </div>

                    <p class="text-muted mb-4">@Model.Description</p>

                    <ul class="list-unstyled">
                        <li><i class="fas fa-clock text-primary me-2"></i><strong>Duration:</strong> @Model.DurationDays Days</li>
                        @if (!string.IsNullOrEmpty(Model.Inclusions))
                        {
                            <li><i class="fas fa-check-circle text-primary me-2"></i><strong>Includes:</strong> @Model.Inclusions</li>
                        }
                    </ul>

                    <form asp-controller="Store" asp-action="AddToCart" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="travelPackageId" value="@Model.Id" />
                        <div class="d-grid">
                            <button type="submit" class="btn btn-accent btn-lg">
                                <i class="fas fa-suitcase-rolling me-2"></i>Book Now
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
