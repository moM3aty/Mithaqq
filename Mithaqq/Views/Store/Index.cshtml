@model Mithaqq.ViewModels.StoreViewModel
@{
    ViewData["Title"] = "Mithaqq Store";
}
<header class="header" id="home">
    <div class="hero d-flex align-items-center text-white">
        <div class="container">
            <div class="row g-4 align-items-center justify-content-center justify-content-lg-start" data-aos="fade-up" data-aos-delay="200">
                <div class="col-lg-10">
                    <div class="content">
                        <span class="badge header-badge rounded-pill px-3 py-2 mb-3">Permenant Trust</span>
                        <h1 class="display-4 fw-bold">
                            <em>Mithaqq Business Development</em><br>
                            <em>Holding Company</em>
                        </h1>
                        <p class="lead mt-3 mb-4">
                            Leading the future through specialized business solutions in training, e-marketing, technical innovation, and travel services.
                        </p>
                        <a href="#companies" class="btn btn-lg btn-primary px-4"><i class="fas fa-rocket me-2"></i>Explore Companies</a>

                        <div class="partner-logos mt-5 d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                            <a asp-controller="Home" asp-action="EasyWay" class="logo-img"><img src="~/images/logo-1.jpg" class="me-4 rounded-2 mb-3" alt="Easy Way" height="100"></a>
                            <a asp-controller="Home" asp-action="Global" class="logo-img"><img src="~/images/logo-2.jpg" class="me-4 rounded-2 mb-3" alt="Global" height="100"></a>
                            <a asp-controller="Home" asp-action="Nile" class="logo-img"><img src="~/images/logo-3.jpg" class="me-4 rounded-2 mb-3" alt="Nile" height="100"></a>
                            <a asp-controller="Store" asp-action="Index" class="logo-img"><img src="~/images/logo-4.jpg" class="me-4 rounded-2 mb-3" alt="Nile Store" height="100"></a>
                            <a asp-controller="Home" asp-action="Innovation" class="logo-img"><img src="~/images/logo-5.jpg" class="me-4 rounded-2 mb-3" alt="Innovation" height="100"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-wave">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
            <path opacity="0.33" fill="#ffffff" d="M473,67.3c-203.9,88.3-263.1-34-320.3,0C66,119.1,0,59.7,0,59.7V0h1000v59.7
    c0,0-62.1,26.1-94.9,29.3c-32.8,3.3-62.8-12.3-75.8-22.1C806,49.6,745.3,8.7,694.9,4.7S492.4,59,473,67.3z" />
            <path opacity="0.66" fill="#ffffff" d="M734,67.3c-45.5,0-77.2-23.2-129.1-39.1c-28.6-8.7-150.3-10.1-254,39.1
    s-91.7-34.4-149.2,0C115.7,118.3,0,39.8,0,39.8V0h1000v36.5c0,0-28.2-18.5-92.1-18.5C810.2,18.1,775.7,67.3,734,67.3z" />
            <path fill="#ffffff" d="M766.1,28.9c-200-57.5-266,65.5-395.1,19.5C242,1.8,242,5.4,184.8,20.6C128,35.8,132.3,44.9,89.9,52.5
    C28.6,63.7,0,0,0,0h1000c0,0-9.9,40.9-83.6,48.1S829.6,47,766.1,28.9z" />
        </svg>
    </div>
</header>
<section class="pb-5" data-aos="fade-up" data-aos-delay="200">
    <div class="container">
        <div class="text-center py-5">
            <h2 class="fw-bold">Welcome to Mithaqq Market</h2>
            <p class="text-muted mt-3">Your one-stop shop for digital services, training courses, and business solutions</p>
        </div>
        <ul class="nav nav-pills justify-content-center" id="productTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#all-items-tab">All</button>
            </li>
            @foreach (var category in Model.Categories)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#category-@category.Id-tab">@category.Name</button>
                </li>
            }
            @if (Model.AllTravelPackages.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#travel-packages-tab">Travel Services</button>
                </li>
            }
        </ul>
        <div class="tab-content py-5" id="productTabsContent">
            <div class="tab-pane fade show active" id="all-items-tab" role="tabpanel">
                <div class="row g-4">
                    @foreach (var product in Model.AllProducts)
                    {
                        <div class="col-lg-4 col-md-6">
                            <partial name="_ProductCard" model="product" />
                        </div>
                    }
                    @foreach (var course in Model.AllCourses)
                    {
                        <div class="col-lg-4 col-md-6">
                            <partial name="_CourseCard" model="course" />
                        </div>
                    }
                    @foreach (var package in Model.AllTravelPackages)
                    {
                        <div class="col-lg-4 col-md-6">
                            <partial name="_TravelPackageCard" model="package" />
                        </div>
                    }
                </div>
            </div>
            @foreach (var category in Model.Categories)
            {
                <div class="tab-pane fade" id="category-@category.Id-tab" role="tabpanel">
                    <div class="row g-4">
                        @foreach (var product in Model.AllProducts.Where(p => p.CategoryId == category.Id))
                        {
                            <div class="col-lg-4 col-md-6">
                                <partial name="_ProductCard" model="product" />
                            </div>
                        }
                        @foreach (var course in Model.AllCourses.Where(c => c.CategoryId == category.Id))
                        {
                            <div class="col-lg-4 col-md-6">
                                <partial name="_CourseCard" model="course" />
                            </div>
                        }
                    </div>
                </div>
            }
            @if (Model.AllTravelPackages.Any())
            {
                <div class="tab-pane fade" id="travel-packages-tab" role="tabpanel">
                    <div class="row g-4">
                        @foreach (var package in Model.AllTravelPackages)
                        {
                            <div class="col-lg-4 col-md-6">
                                <partial name="_TravelPackageCard" model="package" />
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

