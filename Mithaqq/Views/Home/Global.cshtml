@model CompanyStoreViewModel
@{
    ViewData["Title"] = Model.Company.Name;
    ViewData["BodyClass"] = "global";
}

<header class="header global-header" id="home">
    <div class="hero d-flex align-items-center text-white">
        <div class="container">
            <div class="row g-4 align-items-center" data-aos="fade-up" data-aos-delay="200">
                <div class="col-lg-10">
                    <div class="content">
                        <span class="badge header-badge rounded-pill px-3 py-2 mb-3">Permanent Trust</span>
                        <h1 class="display-4 fw-bold">
                            <em>@Model.Company.Name</em><br>
                            <em>For Training</em>
                        </h1>
                        <p class="lead mt-3 mb-4">
                            @Model.Company.Description
                        </p>
                        <a href="#courses" class="btn btn-lg btn-primary px-4"><i class="fas fa-rocket me-2"></i>Explore Courses</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-wave">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
            <path opacity="0.33" fill="#ffffff" d="M473,67.3c-203.9,88.3-263.1-34-320.3,0C66,119.1,0,59.7,0,59.7V0h1000v59.7c0,0-62.1,26.1-94.9,29.3c-32.8,3.3-62.8-12.3-75.8-22.1C806,49.6,745.3,8.7,694.9,4.7S492.4,59,473,67.3z" />
            <path opacity="0.66" fill="#ffffff" d="M734,67.3c-45.5,0-77.2-23.2-129.1-39.1c-28.6-8.7-150.3-10.1-254,39.1s-91.7-34.4-149.2,0C115.7,118.3,0,39.8,0,39.8V0h1000v36.5c0,0-28.2-18.5-92.1-18.5C810.2,18.1,775.7,67.3,734,67.3z" />
            <path fill="#ffffff" d="M766.1,28.9c-200-57.5-266,65.5-395.1,19.5C242,1.8,242,5.4,184.8,20.6C128,35.8,132.3,44.9,89.9,52.5C28.6,63.7,0,0,0,0h1000c0,0-9.9,40.9-83.6,48.1S829.6,47,766.1,28.9z" />
        </svg>
    </div>
</header>

<main>
    <section class="about py-5" id="about">
        <div class="container py-5">
            <div class="row g-4 justify-content-center align-items-center">
                <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="box">
                        <div class="text-center">
                            <h2 class="mb-4 text-center">About Mithaqq Global</h2>
                        </div>
                        <p class="text-muted">Mithaqq Global is a subsidiary of Mithaqq Business Development Holding Company. Mithaqq Global was established to achieve comprehensive quality standards by meeting training needs in all fields with high professionalism, innovation, and the development of strategic training plans and programs. This is to raise the efficiency of human resources, spread awareness, knowledge, and community culture, and create learning opportunities at the hands of top-level training experts.</p>
                    </div>
                </div>
                <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="img rounded-1 overflow-hidden">
                        <video src="~/images/video-1.mp4" controls autoplay muted loop playsinline width="600">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
            </div>
            <i class="fa-solid fa-chalkboard-teacher floating-icon icon-1"></i>
            <i class="fa-solid fa-book-open floating-icon icon-2"></i>
            <i class="fa-solid fa-laptop-code floating-icon icon-3"></i>
        </div>
    </section>
    <section class="features-section pt-5" id="values">
        <div class="container-fluid px-0 pt-5">
            <div class="text-center" data-aos="fade-up" data-aos-delay="200">
                <h2 class="mb-4 text-center">Mithaqq Global Goals</h2>
            </div>
            <div class="row g-0" data-aos="fade-up" data-aos-delay="200">
                <div class="col-md-6 col-xl-4">
                    <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)), url('/images/vision.jpg');">
                        <h3 class="small-text">Mithaqq Global Vision</h3>
                        <div class="feature-inner">
                            <div class="value-icon"><i class="fas fa-eye"></i></div>
                            <h3>Mithaqq Global Vision</h3>
                            <p>
                                To be the premier training and development provider, transforming careers and
                                organizations through excellence in education and professional growth.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-xl-4">
                    <div class="feature-box"
                         style="background-image: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url('/images/mission.jpg');">
                        <h3 class="small-text">Mithaqq Global Mission</h3>
                        <div class="feature-inner">
                            <div class="value-icon">
                                <i class="fa-solid fa-bullseye"></i>
                            </div>
                            <h3>Mithaqq Global Mission</h3>
                            <p>
                                To deliver high-quality training programs and professional development solutions
                                that enhance skills, boost productivity, and drive career advancement.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-xl-4">
                    <div class="feature-box"
                         style="background-image: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url('/images/values.jpg');">
                        <h3 class="small-text">Mithaqq Global Values</h3>
                        <div class="feature-inner">
                            <div class="value-icon">
                                <i class="fas fa-heart"></i>
                            </div>
                            <h3>Mithaqq Global Values</h3>
                            <p>
                                Quality Education, Continuous Learning, Innovation in Training, Professional
                                Excellence, and Learner-Centered Approach.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="py-5 bg-light" id="fields">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-4 fw-bold">Training Fields</h2>
                <p class="mt-3 text-muted">Explore our specialized training domains</p>
            </div>
            <div class="row justify-content-center align-items-center">
                @foreach (var field in Model.TrainingFields)
                {
                    <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                        <div class="field-card">
                            <div class="field-icon">
                                <i class="@field.IconClass"></i>
                            </div>
                            <h4>@field.CategoryName</h4>
                            <div class="course-count">@field.CourseCount Courses Available</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="py-5" id="courses">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-4 fw-bold">Training Courses</h2>
                <p class="lead text-muted">Choose from our comprehensive course catalog</p>
            </div>

            <div class="row g-4" id="courseGrid" data-aos="fade-up" data-aos-delay="200">
                @if (Model.Courses != null && Model.Courses.Any())
                {
                    @foreach (var course in Model.Courses)
                    {
                        <div class="col-md-6 col-lg-4">
                            <partial name="_CourseCard" model="course" />
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <p class="text-center text-muted">No courses available from this company at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </section>
</main>

