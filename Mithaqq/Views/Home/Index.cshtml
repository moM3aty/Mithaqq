    <section id="blog" class="news-section py-5">
        <div class="container">
            <div class="text-center mb-4">
                <h2 class="section-title">Latest News & Insights</h2>
                <p class="section-subtitle">Stay updated with the latest industry trends, company news, and expert insights.</p>
            </div>

            @if (Model.LatestPosts != null && Model.LatestPosts.Any())
            {
                var featuredPost = Model.LatestPosts.First();
                <div class="row g-4 mb-5">
                    <div class="col-12" data-aos="fade-up" data-aos-delay="200">
                        <div class="featured-article">
                            <div class="row align-items-center">
                                <div class="col-lg-6">
                                    <img src="@featuredPost.ImageUrl" alt="Featured Article" class="img-fluid rounded-3">
                                </div>
                                <div class="col-lg-6 ps-lg-5 mt-4 mt-lg-0">
                                    <span class="badge bg-pink mb-3">Featured Article</span>
                                    <h3>@featuredPost.Title</h3>
                                    <p class="article-excerpt">@featuredPost.Subtitle</p>
                                    <div class="article-meta mb-3">
                                        <span><i class="fas fa-calendar-alt"></i> @featuredPost.PublishDate.ToString("MMM dd, yyyy")</span>
                                        <span class="ms-3"><i class="fas fa-clock"></i> 8 min read</span>
                                    </div>
                                    <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@featuredPost.Id" class="btn btn-primary">Read Full Article</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    @foreach (var post in Model.LatestPosts.Skip(1))
                    {
                        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                            <div class="news-card rounded-1">
                                <img src="@post.ImageUrl" alt="News" class="card-img-top">
                                <div class="card-body">
                                    <span class="badge bg-pink mb-2">Company News</span>
                                    <h5 class="card-title mt-2">@post.Title</h5>
                                    <p class="card-text text-muted">@post.Subtitle</p>
                                    <div class="card-meta">
                                        <span><i class="fas fa-calendar-alt"></i> @post.PublishDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="mt-3">
                                        <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@post.Id" class="badge text-decoration-none">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-center">No recent blog posts to display.</p>
            }
        </div>
    </section>

