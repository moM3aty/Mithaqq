@model CompanyStoreViewModel
@{
    ViewData["Title"] = Model.Company.Name;
    ViewData["BodyClass"] = "nile";
}

<header class="header nile-header" id="home">
    <div class="hero d-flex align-items-center text-white">
        <div class="container">
            <div class="row g-4 align-items-center justify-content-center justify-content-lg-start" data-aos="fade-up" data-aos-delay="200">
                <div class="col-lg-10">
                    <div class="content">
                        <span class="badge header-badge rounded-pill px-3 py-2 mb-3">Permanent Trust</span>
                        <h1 class="display-4 fw-bold">
                            <em>@Model.Company.Name For E-Marketing</em><br>
                        </h1>
                        <p class="lead mt-3 mb-4">
                            @Model.Company.Description
                        </p>
                        <a asp-controller="Store" asp-action="Index" class="btn btn-lg btn-primary px-4"><i class="fas fa-store me-2"></i>Explore Store</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-wave">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
            <path opacity="0.33" fill="#ffffff" d="M473,67.3c-203.9,88.3-263.1-34-320.3,0C66,119.1,0,59.7,0,59.7V0h1000v59.7c0,0-62.1,26.1-94.9,29.3c-32.8,3.3-62.8-12.3-75.8-22.1C806,49.6,745.3,8.7,694.9,4.7S492.4,59,473,67.3z" />
            <path opacity="0.66" fill="#ffffff" d="M734,67.3c-45.5,0-77.2-23.2-129.1-39.1c-28.6-8.7-150.3-10.1-254,39.1s-91.7-34.4-149.2,0C115.7,118.3,0,39.8,0,39.8V0h1000v36.5c0,0-28.2-18.5-92.1-18.5C810.2,18.1,775.7,67.3,734,67.3z" />
            <path fill="#ffffff" d="M766.1,28.9c-200-57.5-266,65.5-395.1,19.5C242,1.8,242,5.4,184.8,20.6C128,35.8,132.3,44.9,89.9,52.5C28.6,63.7,0,0,0,0h1000c0,0-9.9,40.9-83.6,48.1S829.6,47,766.1,28.9z" />
        </svg>
    </div>
</header>
<section class="py-5 about">
    <div class="container">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <h2 class="mb-4 text-center">About Mithaqq Nile</h2>
        </div>
        <div class="row g-4 justify-content-center align-items-center">
            <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                <div class="img rounded-1 overflow-hidden">
                    <video src="~/images/video-2.mp4" controls autoplay muted loop playsinline class="rounded-2 shadow-sm w-100">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>
        <div class="floating-icons">
            <i class="fas fa-chart-line"></i>
            <i class="fas fa-bullhorn"></i>
            <i class="fas fa-users"></i>
            <i class="fas fa-lightbulb"></i>
            <i class="fas fa-chart-pie"></i>
        </div>
    </div>
</section>
<section class="features-section pt-5" id="values">
    <div class="container-fluid px-0 pt-5">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <h2 class="mb-4 text-center">Mithaqq Nile Goals</h2>
        </div>
        <div class="row g-0" data-aos="fade-up" data-aos-delay="200">
            <div class="col-md-6 col-xl-4">
                <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)), url('/images/vision.jpg');">
                    <h3 class="small-text">Mithaqq Nile Vision</h3>
                    <div class="feature-inner">
                        <div class="value-icon"><i class="fas fa-eye"></i></div>
                        <h3>Mithaqq Nile Vision</h3>
                        <p>At Methaq Nile, we aspire to be the first choice in e-marketing. We are revolutionizing the way businesses connect with their audiences, breaking the boundaries of time and space. Our vision is to create new horizons and open new markets, placing the entire business world right at your fingertips.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url('/images/mission.jpg');">
                    <h3 class="small-text">Mithaqq Nile Mission</h3>
                    <div class="feature-inner">
                        <div class="value-icon"><i class="fa-solid fa-bullseye"></i></div>
                        <h3>Mithaqq Nile Mission</h3>
                        <p>Our mission is to continuously enhance our modern services and deliver a competitive advantage in customer engagement. We aim to stay ahead of business developments through our electronic portal that connects clients with their needs and provides instant responses to every request. By doing so, we strive to be the first choice for our customers, exceeding expectations, and the strongest option for investors by embodying integrity, quality, and excellence in the e-marketing field.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url('/images/values.jpg');">
                    <h3 class="small-text">Mithaqq Nile Values</h3>
                    <div class="feature-inner">
                        <div class="value-icon"><i class="fas fa-heart"></i></div>
                        <h3>Mithaqq Nile Values</h3>
                        <p>At Methaq Nile, our values are the foundation of everything we do. We believe that technology is a powerful tool that empowers people and businesses, and we use it to create real impact. We value time as one of the most precious resources, so we are committed to efficiency and smart solutions that save every second for our clients.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="services py-5">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up" data-aos-delay="200">
            <h2 class="display-4 fw-bold">Our Services</h2>
            <p class="lead text-muted">Comprehensive digital marketing solutions for modern businesses</p>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card text-center p-3">
                    <div class="icon mb-3">
                        <i class="fas fa-bullhorn"></i>
                    </div>
                    <h5 class="fw-bold">Marketing products and services</h5>
                    <p>Comprehensive strategies to promote your products and services effectively.</p>
                    <ul class="list-unstyled text-start mt-3">
                        <li><span>✔</span> Market Research & Analysis</li>
                        <li><span>✔</span> Promotional Campaigns</li>
                        <li><span>✔</span> Sales Funnel Optimization</li>
                        <li><span>✔</span> Performance Tracking</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card text-center  p-3">
                    <div class="icon mb-3">
                        <i class="fas fa-ad"></i>
                    </div>
                    <h5 class="fw-bold">Marketing ads</h5>
                    <p>Targeted ad campaigns to reach the right audience and maximize ROI.</p>
                    <ul class="list-unstyled text-start mt-3">
                        <li><span>✔</span> Google & Social Ads</li>
                        <li><span>✔</span> Budget Optimization</li>
                        <li><span>✔</span> A/B Testing</li>
                        <li><span>✔</span> Conversion Tracking</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card text-center p-3">
                    <div class="icon mb-3">
                        <i class="fas fa-building"></i>
                    </div>
                    <h5 class="fw-bold">Building brand identities for projects and companies</h5>
                    <p>Creating strong, memorable identities that define and differentiate your brand.</p>
                    <ul class="list-unstyled text-start mt-3">
                        <li><span>✔</span> Logo Design</li>
                        <li><span>✔</span> Brand Guidelines</li>
                        <li><span>✔</span> Messaging & Tone</li>
                        <li><span>✔</span> Visual Identity Systems</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card text-center p-3">
                    <div class="icon mb-3">
                        <i class="fas fa-video"></i>
                    </div>
                    <h5 class="fw-bold">Graphic video design</h5>
                    <p>Engaging video graphics to tell stories and showcase products creatively.</p>
                    <ul class="list-unstyled text-start mt-3">
                        <li><span>✔</span> Animated Intros</li>
                        <li><span>✔</span> Product Demos</li>
                        <li><span>✔</span> Social Media Videos</li>
                        <li><span>✔</span> Video Editing</li>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card text-center p-3">
                    <div class="icon mb-3">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <h5 class="fw-bold">Motion graphic design</h5>
                    <p>Dynamic motion graphics to captivate audiences and boost engagement.</p>
                    <ul class="list-unstyled text-start mt-3">
                        <li><span>✔</span> Animated Ads</li>
                        <li><span>✔</span> Explainer Videos</li>
                        <li><span>✔</span> Logo Animation</li>
                        <li><span>✔</span> Interactive Elements</li>
                    </ul>
                </div>
            </div>

        </div>

    </div>
</section>
<section class="py-5 bg-light products">
    <div class="container">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <h2 class="mb-4 text-center">Mithaqq Nile Products</h2>
        </div>
        <div class="row g-4" data-aos="fade-up" data-aos-delay="200">
            @if (Model.Products != null && Model.Products.Any())
            {
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-6 col-lg-4">
                        <partial name="_ProductCard" model="product" />
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center text-muted">No products available from this company at the moment.</p>
                </div>
            }
        </div>
        <div class="text-center mt-5" data-aos="fade-up" data-aos-delay="200">
            <a asp-controller="Store" asp-action="Index" class="btn btn-accent btn-lg">
                <i class="fas fa-store me-2"></i>Visit Full Mithaqq Store
            </a>
        </div>
    </div>
</section>
