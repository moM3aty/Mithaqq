@model CompanyStoreViewModel
@{
    // The title and body class will be set dynamically based on the company
    ViewData["Title"] = Model.Company.Name;
    ViewData["BodyClass"] = Model.Company.Name.Replace("Mithaqq ", "").ToLower().Replace(" ", "-");
}

@* NOTE TO USER:
    This is a generic template for the company store pages.
    Please provide the specific HTML design for each company page (Global, Nile, Innovation, EasyWay),
    and I will integrate it with this dynamic data model.
*@

<!-- Example of a dynamic header -->
<header class="header @(ViewData["BodyClass"])-header" id="home">
    <div class="hero d-flex align-items-center text-white">
        <div class="container">
            <h1 class="display-4 fw-bold">@Model.Company.Name</h1>
            <p class="lead mt-3 mb-4">@Model.Company.Description</p>
            <a href="#store-items" class="btn btn-lg btn-primary px-4"><i class="fas fa-store me-2"></i>Explore Our Offerings</a>
        </div>
    </div>
</header>

<!-- Store Section -->
<section id="store-items" class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Our Products & Courses</h2>
            <p class="text-muted">Explore exclusive offerings from @Model.Company.Name</p>
        </div>

        @if (Model.Courses.Any())
        {
            <h3 class="mb-4">Training Courses</h3>
            <div class="row g-4">
                @foreach (var course in Model.Courses)
                {
                    <div class="col-lg-4 col-md-6">
                        <partial name="_CourseCard" model="course" />
                    </div>
                }
            </div>
            <hr class="my-5">
        }

        @if (Model.Products.Any())
        {
            <h3 class="mb-4">Products & Services</h3>
            <div class="row g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6">
                        <partial name="_ProductCard" model="product" />
                    </div>
                }
            </div>
        }

        @if (!Model.Products.Any() && !Model.Courses.Any())
        {
            <div class="text-center py-5">
                <p class="lead text-muted">No products or courses are available from this company at the moment.</p>
            </div>
        }
    </div>
</section>
