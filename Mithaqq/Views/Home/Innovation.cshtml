@model CompanyStoreViewModel
@{
    ViewData["Title"] = Model.Company.Name;
    ViewData["BodyClass"] = "innovation";
}

<header class="header innovation-header" id="home">
    <div class="hero d-flex align-items-center text-white">
        <div class="container">
            <div class="row g-4 align-items-center justify-content-center justify-content-lg-start" data-aos="fade-up" data-aos-delay="200">
                <div class="col-lg-10">
                    <div class="content">
                        <span class="badge header-badge rounded-pill px-3 py-2 mb-3">Permanent Trust</span>
                        <h1 class="display-4 fw-bold">
                            <em>@Model.Company.Name For Technical Solutions</em><br>
                        </h1>
                        <p class="lead mt-3 mb-4">
                            @Model.Company.Description
                        </p>
                        <a href="#products" class="btn btn-lg btn-primary px-4"><i class="fas fa-store me-2"></i>Explore Solutions</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-wave">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
            <path opacity="0.33" fill="#ffffff" d="M473,67.3c-203.9,88.3-263.1-34-320.3,0C66,119.1,0,59.7,0,59.7V0h1000v59.7c0,0-62.1,26.1-94.9,29.3c-32.8,3.3-62.8-12.3-75.8-22.1C806,49.6,745.3,8.7,694.9,4.7S492.4,59,473,67.3z" />
            <path opacity="0.66" fill="#ffffff" d="M734,67.3c-45.5,0-77.2-23.2-129.1-39.1c-28.6-8.7-150.3-10.1-254,39.1s-91.7-34.4-149.2,0C115.7,118.3,0,39.8,0,39.8V0h1000v36.5c0,0-28.2-18.5-92.1-18.5C810.2,18.1,775.7,67.3,734,67.3z" />
            <path fill="#ffffff" d="M766.1,28.9c-200-57.5-266,65.5-395.1,19.5C242,1.8,242,5.4,184.8,20.6C128,35.8,132.3,44.9,89.9,52.5C28.6,63.7,0,0,0,0h1000c0,0-9.9,40.9-83.6,48.1S829.6,47,766.1,28.9z" />
        </svg>
    </div>
</header>

<section class="about py-5" id="about">
    <div class="container py-5">
        <div class="row g-4 justify-content-center align-items-center">
            <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="box">
                    <div class="text-center">
                        <h2 class="mb-4 text-center">About Mithaqq Innovation </h2>
                    </div>
                    <p class="text-muted">It is a subsidiary of Mithaqq Business Development Holding Company. It is a leading company in the field of software and information systems in various business sectors. It aims to increase the efficiency and effectiveness of sectors' work by innovating and developing various business systems. This is done in a way that keeps pace with developments, using the fastest and best innovative methods, enabling owners of commercial, service, production, and research activities to operate with utmost ease. This allows us to play a significant role and have a clear impact on the success, development, and performance of the largest number of individuals, institutions, and companies. This enables us to be leaders in our businesses and helps us preserve and grow our investments and achieve our goals.</p>
                </div>
            </div>
            <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="img">
                    <img src="~/images/about.jpg" class="img-fluid" alt="about">
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section pt-5" id="values">
    <div class="container-fluid px-0 pt-5">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <h2 class="mb-4 text-center">Mithaqq Innovation Goals</h2>
        </div>
        <div class="row g-0" data-aos="fade-up" data-aos-delay="200">
            <div class="col-md-6 col-xl-4">
                <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)), url('/images/vision.jpg');">
                    <h3 class="small-text">Mithaqq Innovation Vision</h3>
                    <div class="feature-inner">
                        <div class="value-icon"><i class="fas fa-eye"></i></div>
                        <h3>Mithaqq Innovation Vision</h3>
                        <p>To achieve leadership and excellence through smart, strategic, and knowledge-based technical services, meeting international standards, so that we can be part of the future of your business.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url('/images/mission.jpg');">
                    <h3 class="small-text">Mithaqq Innovation Mission</h3>
                    <div class="feature-inner">
                        <div class="value-icon"><i class="fa-solid fa-bullseye"></i></div>
                        <h3>Mithaqq Innovation Mission</h3>
                        <p>We strive to provide integrated and smart technical solutions to support administrative operations and keep pace with developments in the field of information technology and information technology, to enhance individual and institutional performance and spread technical awareness in society.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="feature-box" style="background-image: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url('/images/values.jpg');">
                    <h3 class="small-text">Mithaqq Innovation Values</h3>
                    <div class="feature-inner">
                        <div class="value-icon"><i class="fas fa-heart"></i></div>
                        <h3>Mithaqq Innovation Values</h3>
                        <p>At <strong>Mithaqq Innovation</strong>, we uphold three core principles that guide every service we provide. <strong>Speed of completion:</strong> ensures that projects are delivered on time without sacrificing quality. <strong>Accuracy of performance:</strong> reflects our dedication to precision in every detail, guaranteeing that each task is executed with exceptional care. Finally, <strong>guarantee of trust:</strong> represents our commitment to transparency and reliability, building long-term relationships with our clients based on confidence and integrity.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 innovation-services">
    <div class="container">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <h2 class="mb-4 text-center">Mithaqq Innovation Services</h2>
        </div>
        <div class="row g-4 mt-4">
            <div class="col-md-6 col-lg-4">
                <div class="box text-center p-4 h-100">
                    <div class="icon mb-3">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Creating and developing systems and programs</h3>
                    <p class="">
                        As projects and businesses evolve, we offer you systems designed to meet your needs quickly,
                        easily, and efficiently.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="box text-center p-4 h-100">
                    <div class="icon mb-3">
                        <i class="fas fa-laptop-code "></i>
                    </div>
                    <h3 class="fw-bold mb-3">Creating and designing websites</h3>
                    <p class="">
                        We've created a professional website using the latest technologies to provide an attractive
                        and distinctive interface for your project.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="box text-center p-4 h-100">
                    <div class="icon mb-3">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Design and development of smart applications</h3>
                    <p class="">
                        All businesses are racing to be available and implementable to all customers. Therefore, we
                        offer you the service of creating and developing smartphone applications.
                    </p>
                </div>
            </div>
        </div>

    </div>
</section>
<section class="py-5 bg-light products" id="products">
    <div class="container">
        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
            <h2 class="mb-4 text-center">Mithaqq Innovation Products</h2>
        </div>
        <div class="row g-4" data-aos="fade-up" data-aos-delay="200">
            @if (Model.Products != null && Model.Products.Any())
            {
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-6 col-lg-4">
                        <partial name="_ProductCard" model="product" />
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center text-muted">No products available from this company at the moment.</p>
                </div>
            }
        </div>
        <div class="text-center mt-5" data-aos="fade-up" data-aos-delay="200">
            <a asp-controller="Store" asp-action="Index" class="btn btn-accent btn-lg">
                <i class="fas fa-store me-2"></i>Visit Mithaqq Store
            </a>
        </div>
    </div>
</section>
