<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mithaqq Dashboard</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
    <section class="dashboard">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar as per your HTML structure -->
                <div class="col-md-3 col-lg-2 px-0">
                    <div class="sidebar bg-light vh-100">
                        <div class="p-3">
                            <div class="logo mb-5">
                                <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index"><i class="fas fa-building me-2"></i>Mithaqq</a>
                            </div>
                            <h6 class="text-muted mb-3">DASHBOARD SELECTION</h6>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary" onclick="showEcommerceDashboard()">
                                    <i class="fas fa-shopping-cart me-2"></i>E-commerce
                                </button>
                                <button class="btn btn-outline-success" onclick="showLMSDashboard()">
                                    <i class="fas fa-graduation-cap me-2"></i>LMS
                                </button>

                            </div>
                        </div>
                        <div class="logout p-3 d-flex justify-content-center align-items-end">
                            <form class="form-inline mb-0" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link btn btn-link text-dark px-2 border-0">
                                    <i class="fa-solid fa-right-from-bracket me-2"></i>Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="col-md-9 col-lg-10">
                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

