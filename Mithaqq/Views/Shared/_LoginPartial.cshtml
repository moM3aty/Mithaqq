@using Microsoft.AspNetCore.Identity
@using Mithaqq.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav d-flex flex-row align-items-center ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown mx-1">
            <a class="nav-link dropdown-toggle text-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="My Account">
                <i style="margin-left:7px;" class="fas fa-user"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user-cog me-2"></i>My Profile</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="fas fa-cogs me-2"></i>Admin Panel</a></li>
                }
                @if (User.IsInRole("CompanyAdmin"))
                {
                    <li><a class="dropdown-item" asp-controller="CompanyAdmin" asp-action="Index"><i class="fas fa-building me-2"></i>Company Panel</a></li>
                }
                @if (User.IsInRole("Marketer"))
                {
                    <li><a class="dropdown-item" asp-controller="Marketer" asp-action="Index"><i class="fas fa-bullhorn me-2"></i>Marketer Panel</a></li>
                }
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline mb-0" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="dropdown-item"><i class="fa-solid fa-right-from-bracket me-2"></i>Log Out</button>
                    </form>
                </li>
            </ul>
        </li>
        <li class="nav-item mx-1">
            <a class="nav-link px-2" asp-controller="Profile" asp-action="Favorites" title="My Favorites"><i class="fas fa-heart"></i></a>
        </li>
        <li class="nav-item mx-1">
            @await Component.InvokeAsync("ShoppingCart")
        </li>
    }
    else
    {
        <li class="nav-item mx-2">
            <a class="nav-link " asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Create Account</a>
        </li>
        <li class="nav-item mx-2">
            <a class="nav-link " asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> Log In</a>
        </li>
    }
</ul>

