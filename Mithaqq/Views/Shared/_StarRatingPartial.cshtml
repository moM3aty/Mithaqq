@model double

<div class="rating-stars text-warning d-inline-block">
    @for (int i = 1; i <= 5; i++)
    {
        if (i <= Model)
        {
            <i class="fas fa-star"></i>
        }
        else if (i - 0.5 <= Model)
        {
            <i class="fas fa-star-half-alt"></i>
        }
        else
        {
            <i class="far fa-star"></i>
        }
    }
</div>
