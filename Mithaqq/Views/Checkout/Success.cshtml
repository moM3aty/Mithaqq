@{
    ViewData["Title"] = "Order Successful";
}

<div class="container text-center py-5" style="padding-top: 120px !important; min-height: 70vh;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
            <h1 class="display-4 fw-bold">Thank You!</h1>
            <p class="lead">Your order has been placed successfully.</p>
            <p>You will receive an email confirmation shortly. You can view your purchased courses and order details in your profile.</p>
            <div class="mt-4">
                <a asp-controller="Profile" asp-action="Index" class="btn btn-primary me-2">Go to My Profile</a>
                <a asp-controller="Store" asp-action="Index" class="btn btn-outline-secondary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>
