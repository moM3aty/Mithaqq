@model IEnumerable<Mithaqq.Models.Favorite>

@{
    ViewData["Title"] = "My Favorites";
    ViewData["BodyClass"] = "fav-page";
}

<header class="wishlist-main-header">
    <div class="container">
        <h3>My Wishlist</h3>
    </div>
</header>

<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Your Favorite Items</h2>
            <p class="text-muted">Here are the products and courses you've saved for later.</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <partial name="_FavoriteItemCard" model="item" />
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h2>Your Wishlist is Empty</h2>
                <p class="text-muted">You haven't added any items to your wishlist yet. Start exploring!</p>
                <a asp-controller="Store" asp-action="Index" class="btn btn-primary mt-3">Explore Products & Courses</a>
            </div>
        }
    </div>
</section>

