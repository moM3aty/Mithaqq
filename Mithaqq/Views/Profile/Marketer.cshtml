@model ApplicationUser
@{
    ViewData["Title"] = "Marketer Profile";
}
<section class="py-5">
    <div class="container py-5 mt-4">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card py-4 profile-card">
                    <div class="card-body text-center">
                        <div class="profile-avatar mx-auto mb-4">
                            <img id="marketerAvatar" src="~/images/company1.jpg" class="rounded-circle" width="120" height="120" style="object-fit: cover;" alt="Profile Avatar">
                        </div>
                        <h5 id="marketerName" class="card-title mb-1">@Model.FirstName @Model.LastName</h5>
                        <p id="marketerTitle" class="text-white small">Digital Marketing Specialist</p>
                        <button class="btn btn-sm btn-primary mt-2">
                            <i class="fas fa-edit me-1"></i> Edit Profile
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-box me-2"></i>
                            My Packages
                        </h5>
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Add Package
                        </button>
                    </div>
                    <div class="card-body">
                        <p class="text-center p-5">Marketer packages are not yet implemented.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

