@model Mithaqq.ViewModels.LoginViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Log in";
    ViewData["BodyClass"] = "login-body";
}

<section class="py-5">
    <div class="container">
        <div class="row g-4 justify-content-center align-items-center">
            <div class="col-md-8">
                <div class="login-card shadow shadow-sm mt-5">
                    <div class="heading text-center mb-4">
                        <h2 class="title mb-4">Login Page</h2>
                        <p class="description text-white">Please enter your login details to access your account</p>
                    </div>
                    <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row g-3">
                            <div class="col-12">
                                <div>
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="w-100" placeholder="Enter Your email">
                                    <span asp-validation-for="Email" class="error-msg text-danger d-block mt-1"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="password-field position-relative">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" id="Password" class="w-100" placeholder="Enter Your Password">
                                    <i class="fas fa-eye-slash toggle-password" data-input="Password"></i>
                                </div>
                                <span asp-validation-for="Password" class="error-msg text-danger d-block mt-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="mb-3 form-check d-flex align-items-center">
                                    <input class="form-check-input me-2" style="width: 1.2em; height: 1.2em; width: fit-content;margin-right: 15px;margin-top: 0px;" type="checkbox" asp-for="RememberMe" />
                                    <label class="form-check-label" asp-for="RememberMe">
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="button">
                                    <button type="submit" class="btn btn-login w-100">Login</button>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center mt-2 p-3">
                                    <div>
                                        <a class="create-account" asp-action="Register">Create Account</a>
                                    </div>
                                    <div>
                                        <a class="forget-pass" href="#">Forget Password?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
