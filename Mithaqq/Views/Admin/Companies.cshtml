@model IEnumerable<Company>
@{
    ViewData["Title"] = "Companies";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 fw-bold mb-0">Company Overview</h1>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted">The following companies are statically configured in the system and cannot be managed from this dashboard.</p>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Logo</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)
                    {
                        <tr>
                            <td>@company.Id</td>
                            <td>
                                <img src="@company.LogoUrl" alt="@company.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                            </td>
                            <td>@company.Name</td>
                            <td>@company.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

