@model IEnumerable<Course>
@{
    ViewData["Title"] = "Manage My Courses";
    Layout = "_CompanyAdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 fw-bold mb-0">My Courses</h1>
    <a href="#" class="btn btn-primary disabled"><i class="fas fa-plus me-2"></i>Add New Course (Not Implemented)</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Course</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Instructor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@course.ImageUrl" alt="@course.Name" class="me-3" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                                    <span>@course.Name</span>
                                </div>
                            </td>
                            <td>@course.Category.Name</td>
                            <td>@course.Price.ToString("C")</td>
                            <td>@course.InstructorName</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary me-1 disabled"><i class="fas fa-edit"></i></a>
                                <a href="#" class="btn btn-sm btn-outline-danger disabled"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
